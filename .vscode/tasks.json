{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [{
      "type": "shell",
      "label": "g++ build active file",
      "command": "/usr/local/bin/gcc-9",
      "args": [
        "-std=gnu++17",
        "-g",
        "-Wall",
        "-lstdc++",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "atcoder test active file",
      "command": "pipenv",
      "args": [
        "run",
        "atcoder-tools",
        "test",
        "-d",
        "${fileDirname}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}