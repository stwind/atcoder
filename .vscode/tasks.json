{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build active file",
      "command": "/opt/homebrew/bin/gcc-12",
      "args": [
        "-fdiagnostics-color=always",
        "-std=gnu++23",
        "-g",
        "-Wall",
        "-lstdc++",
        "-Wunused-result",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
